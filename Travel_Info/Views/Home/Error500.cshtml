@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>500 - Internal Server Error</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lottie-web/5.9.6/lottie.min.js"></script>
    <style>
        .error-container {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background-color: #f0f8ff;
        }

        .error-content {
            text-align: center;
        }

            .error-content h1 {
                font-size: 6rem;
                font-weight: bold;
                margin-bottom: 1rem;
                color: #dc3545;
            }

            .error-content p {
                font-size: 1.5rem;
                margin-bottom: 2rem;
                color: #333;
            }

        .lottie-animation {
            width: 320px;
            height: 320px;
            margin-bottom: 2rem;
        }

        .btn {
            padding: 0.75rem 1.5rem;
            font-size: 1rem;
        }
    </style>
</head>
<body>
    <div class="error-container">
        <div id="lottie-500" class="lottie-animation"></div>
        <div class="error-content">
            <h1>500</h1>
            <p>Oops! Looks like our travel guide got lost.</p>
            <a href="/" class="btn btn-primary">Return to safety</a>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            lottie.loadAnimation({
                container: document.getElementById('lottie-500'),
                renderer: 'svg',
                loop: true,
                autoplay: true,
                path: 'https://assets3.lottiefiles.com/packages/lf20_3rwasyjy.json'
            });
        });
    </script>
</body>
</html>
