@model Travel_Info.Web.ViewModels.FavoritePlace.AddToFavoriteViewModel

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger text-center">
        @TempData["ErrorMessage"]
    </div>
}

<div class="card">
    <div class="card-header">
        <h4>@Model.DestinationName</h4>
    </div>
    <div class="card-body">
        <img src="@Model.DestinationImageUrl" class="img-fluid" alt="@Model.DestinationName" style="height: 200px; object-fit: cover;">
        <p>@Model.DestinationDescription</p>
    </div>
    <div class="card-footer">
        <form asp-action="Add" method="post">
            <input type="hidden" asp-for="DestinationId" />
            <button type="submit" class="btn btn-primary">Add to Favorites</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}