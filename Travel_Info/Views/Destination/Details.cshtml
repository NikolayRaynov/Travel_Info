@model DestinationDetailsViewModel

<h1>@Model.Name</h1>

@if (!string.IsNullOrEmpty(Model.ImageUrl))
{
    <img src="@Model.ImageUrl" alt="Image of @Model.Name" class="img-fluid" style="height: 200px; object-fit: cover;">
}

<p>@Model.Description</p>

<h4>Reviews:</h4>

@if (Model.Reviews.Any())
{
    <ul class="list-unstyled">
        @foreach (var review in Model.Reviews)
        {
            <li>
                <p><strong>@review.User:</strong></p>
                <p>@review.Comment</p>
                <p>Rating: 
                    <span>
                    @for (int i = 1; i <= 5; i++)
                    {
                        if (i <= @review.Rating)
                        {
                            <i class="bi bi-star-fill text-warning"></i>
                        }
                        else
                        {
                            <i class="bi bi-star text-muted"></i>
                        }
                    }
                </span>
                </p>
                <p>(@review.CreatedAt)</p>
                @if (User.Identity.IsAuthenticated && review.User == User.Identity.Name)
                {
                    <div>
                        <a asp-controller="Review" asp-action="Edit" asp-route-id="@review.Id" class="btn btn-warning">Edit</a>
                        <a asp-controller="Review" asp-action="Delete" asp-route-id="@review.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this review?');">Delete</a>
                    </div>
                }
                <br>
                <br>
            </li>
        }
    </ul>
}
else
{
    <p>No reviews yet.</p>
}

@if (this.User?.Identity != null && this.User.Identity.IsAuthenticated)
{
    <a asp-controller="Review" asp-action="Add" asp-route-destinationId="@Model.Id" class="btn btn-primary">Add Review</a>
}